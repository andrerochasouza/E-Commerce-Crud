
<%- include('partials/head') %>


<body>
    <%- include('partials/navegacao') %>

    <main>
            <% if (users.length > 0) { %>
                <table class="table table-hover">
                    <thead>
                      <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">CPF</th>
                      </tr>
                    </thead>

                    <% for (user of users) { %>
                    <tbody>
                      <tr>
                        <th scope="row"><%= user.id %></th>
                        <td><%= user.nome %></td>
                        <td><%= user.email %></td>
                        <td><%= user.cpf %></td>
                        <td><a class="btn" href="/admin/excluiruser/<%= user.id %>">Deletar</a></td>
                      </tr>
                      <% } %>
                  </table>
        </div>
        <% } else { %>
            <h1>Nenhum cliente cadastrado!</h1>
        <% } %>
    </main>
    <%- include('partials/footer') %>
</body>

</html>